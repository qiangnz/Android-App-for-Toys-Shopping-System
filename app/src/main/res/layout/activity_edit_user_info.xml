<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".ui.EditUserInfoActivity"
    android:background="@color/backGround">

    <TextView
        android:id="@+id/userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Please Enter\nShipping Information"
        android:gravity="center"
        android:textColor="@color/txtColor_black"
        android:textIsSelectable="true"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userinfo"
        android:layout_marginTop="50dp"
        android:text="Customer Name:"
        android:textStyle="bold"
        android:textColor="@color/txtColor_black"
        android:textSize="22dp"/>

    <EditText
        android:id="@+id/etUsername"
        style="@style/editTextStyle"
        android:layout_marginTop="10dp"
        android:layout_below="@id/user_name"
        android:hint="Please Enter Customer Name"
        android:inputType="text" />

    <TextView
        android:id="@+id/toy_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/etUsername"
        android:text="Shipping Address:"
        android:textColor="@color/txtColor_black"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etAddress"
        style="@style/editTextStyle"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toy_address"
        android:hint="Please Enter Shipping Address"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/btnPreviewOrder"
        style="@style/btnStyle"
        android:layout_below="@id/etAddress"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_marginTop="60dp"
        android:text="Preview Order" />

</RelativeLayout>